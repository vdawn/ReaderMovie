/* pages/post/post.wxss */
swiper{
  height:500rpx;
  border:1px solid red;
}
image{
  height:500rpx;
}
.post-container{
  display:flex;
  flex-direction:column;
  margin-top:20rpx;
  margin-bottom:40rpx;
  background-color:#fff;
  border-bottom:3px solid #ededed; 
  border-top:3px solid #ededed; 
  padding-bottom:5px;
}
.post-author-date{
  margin:1rpx 0 20rpx 10rpx;
}
.post-author{
  width:60rpx;
  height:60rpx;
  vertical-align:middle;
  border:1px solid red;
}
.post-date{
  margin-left:20rpx;
  vertical-align:middle;
  margin-bottom: 5px;
  font-size:26rpx;
}
.post-title{
  font-size:34rpx;
  font-weight:600;
  color:#333;
  margin-bottom:10px;
  margin-left:10px;
}
.post-image{
  margin-left:16px;
  width:100%;
  height:340rpx;
  margin:0 auto;
  margin-bottom:15px;
  border:1px solid skyblue;
}
.post-content{
  color:#666;
  font-size:28rpx;
  margin-bottom:20px;
  margin-left:20px;
  letter-spacing:2rpx;
  line-height:40rpx;
}
.post-like{
  font-size:13px;
  flex-direction: row;
  line-height:16px;
  margin-left:10px;
}
.post-like-image{
  height: 16px;
  width: 16px;
  margin-right:8px;
  vertical-align: middle;
  border:1px solid red;
}
.post-like-font{
  vertical-align: middle;
  margin-right:20px;
}